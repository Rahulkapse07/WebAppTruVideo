<suite name="RC Smoke Suite" parallel="false" thread-count="3"
	verbose="5" preserve-order="true">
	<listeners>
		<listener class-name="com.truvideo.testutils.Listeners"></listener>
	</listeners>
	<parameter name="baseUrl" value="https://rc.truvideo.com/login" />
	<parameter name="browser" value="chrome" />
	<parameter name="headless" value="false" />
	<test name="Login Page Test">
		<classes>
			<class name="com.truvideo.tests.LoginPageTest"></class>
		</classes>
	</test>
	<test name = "message order">
		<classes>
			<class name="com.truvideo.tests.RepairOrderDetailPageTest">
				<methods>
					<include name="verifyAllAvailableElementsOnOrderDetails" />
					<include name="verifyAddMediaFunction_FirstVideo" />
					<include name="verifySendToCustomer_ForFirstVideo" />
					<include name="verifySendToCustomer_ForSecondVideo" />
					<include name="verifyelement" />
					<include name="verifyelement" />
					
				</methods>
			</class>
			</classes>
	</test>
</suite>

